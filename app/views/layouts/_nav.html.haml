.navbar.navbar-inverse.navbar-fixed-top
	.navbar-inner
		.container
			%a.btn.btn-navbar{:data=>{:toggle=>"collapse", :target=>".nav-collapse"}}
				%span.icon-bar"
				%span.icon-bar"
				%span.icon-bar"
			= link_to("Eventus", "#", :class=>"brand")

			.nav-collapse.collapse
				%ul.nav.pull-right
					= nav_link("Dashboard", dashboard_index_path)
					= nav_link("My Profile", edit_user_registration_path)
					- if user_signed_in?
						- if can? :manage, :all
							= nav_link("Admin Panel", admin_index_path)
					%li
						%a{:href => "http://dev.omgmediagroup.com/ggfHelp", :target => "_blank"} Help
					%li 
						= link_to("Logout", destroy_user_session_path, :method => :delete, confirm: "Are you sure you want to logout?")