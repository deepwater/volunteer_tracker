.row
  .span12
    %h2 Editing Department Block

    = form_for(@department_block, :url => dashboard_department_block_path, :html => {:class => 'form-horizontal'}) do |f|
      - if @department_block.errors.any?
        #error_explanation
          %h2= "#{pluralize(@department_block.errors.count, "error")} prohibited this department_block from being saved:"
          %ul
            - @department_block.errors.full_messages.each do |msg|
              %li= msg

      %fieldset
        - if @department_block.department
          = f.hidden_field :department_id
        - else
          = f.hidden_field :department_id, :value => @department.id     
        .control-group
          = f.label(:name, :class => 'control-label')
          .controls
            = f.text_field(:name)
        .control-group
          = f.label(:start_time, :class => 'control-label')
          .controls
            .input-append.bootstrap-timepicker
              =f.text_field(:start_time, class:"timepicker input-small", value: in_twelve_hour_time(@department_block.start_time))
              %span.add-on
                %i.icon-time
        .control-group
          = f.label(:end_time, :class => 'control-label')
          .controls
            .input-append.bootstrap-timepicker
              =f.text_field(:end_time, class:"timepicker input-small", value: in_twelve_hour_time(@department_block.end_time))
              %span.add-on
                %i.icon-time
        .control-group
          = f.label(:suggested_number_of_workers, :class => 'control-label')
          .controls
            = f.number_field(:suggested_number_of_workers)
        .form-actions
          = f.submit(:class => 'btn btn-primary', :value => "Save Changes")

    = link_to 'Show', dashboard_department_path(@department_block.department)
    \|
    = link_to 'Back', dashboard_department_path(@department_block.department)