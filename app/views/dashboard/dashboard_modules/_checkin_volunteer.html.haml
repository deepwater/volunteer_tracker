%li.span4
  .thumbnail
    .caption
      %h4 Check-In Volunteer
      %p
        - if can? :manage, CheckIn
          = link_to "Show All Scheduled Volunteers", scheduled_dashboard_check_ins_path, class: "btn btn-block btn-primary"
        - if can?(:manage_fastpass, current_user)
          %br
          = link_to "Fastpass Check In", fastpass_dashboard_check_ins_path, class: "btn btn-block btn-primary"
          %br
          = link_to "Fastpass Check Out", dashboard_fastpass_check_out_path, class: "btn btn-block btn-primary"