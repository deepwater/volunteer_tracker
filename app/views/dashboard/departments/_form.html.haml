= form_for(@department, :url => admin_departments_path(), :html => {:class => 'form-horizontal'}) do |f|
  - if @department.errors.any?
    #error_explanation
      %h2= "#{pluralize(@department.errors.count, "error")} prohibited this department from being saved:"
      %ul
        - @department.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .control-group
      = f.label(:name, :class => 'control-label')
      .controls
        = f.text_field(:name, :class => 'input-xlarge focused')
    .control-group
      = f.label(:budgeted_hours, :class => 'control-label')
      .controls
        = f.text_field(:budgeted_hours, :class => 'input-xlarge focused')
    .form-actions
      = f.submit(:class => 'btn btn-primary', :value => "Save Changes")
