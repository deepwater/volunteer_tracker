%td.editable.date.check-date
  %span.value= check_in.created_at.strftime("%b %-d")
  = form_for [:dashboard, check_in], html: { class: "hide" }, remote: true do |f|
    %div.input-append.date
      = f.text_field :created_at, value: check_in.created_at.strftime("%Y-%m-%d")
      %span.add-on
        %i.icon-calendar
