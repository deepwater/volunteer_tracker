.row
  .span12
    %br
    %h3 
      Choose your hours of availability ( Step
      %span.current-day 1
      out of 
      %span.total-days= Day.all.length
      )
    %br
    
.row.time-availability-wrapper
  .pagination.span6
    %ul
      %li.disabled
        %a{:href=>"#", :class => "prev-day"}
          Prev
      %li.active
        %a 
      %li
        %a{:href=>"#", :class => "next-day"}
          Next

  .span3
    %button.btn.btn-primary.available-all-day
      %i.icon-ok-sign.icon-white
      I'm Available All Day

  .span3
    %button.btn.btn-danger.not-available-all-day
      %i.icon-remove-sign.icon-white
      I'm Not Available This Day

.row
  .span4
    %h3 Morning
    %table.time-availability.morning.table.table-bordered
      %tbody
        - t = Time.new(@first_day.year,@first_day.month,@first_day.mday, 0, 0, 0)

        - 48.times do |i|
          %tr
            %th.span1
              = t.strftime("%I:%M%P")
            %td.span1{data: {time: t.strftime("%H:%M %p")}}
              Click to Schedule
          - t = t + (60 * 15)
      
  .span4.offset2
    %h3 Afternoon
    %table.time-availability.afternoon.table.table-bordered
      %tbody
        - 48.times do |i|
          %tr
            %th.span1
              = t.strftime("%I:%M%P")
            %td.span1{data: {time: t.strftime("%H:%M %p")}}
              Click to Schedule
          - t = t + (60 * 15)

