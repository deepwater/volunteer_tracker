= form_for @department do |f|
  - if @department.errors.any?
    #error_explanation
      %h2= "#{pluralize(@department.errors.count, "error")} prohibited this department from being saved:"
      %ul
        - @department.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :department_manager_id
    = f.number_field :department_manager_id
  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :budgeted_hours
    = f.number_field :budgeted_hours
  .actions
    = f.submit 'Save'
