.row
  .span12
    %h2
      %i.halflings-icon.edit 
      Department List

    %table.table.table-bordered.table-striped
      %tr
        %th Name
        %th Department Manager

        - @departments.each do |department|
          %tr
            %td= link_to department.name, department_path(department)

            - if !department.user.nil?
              %td= "#{department.user.first_name} #{department.user.last_name}"
            - else
              %td Unassigned