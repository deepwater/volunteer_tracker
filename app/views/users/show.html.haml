.row-fluid
	.span12
		%h2
			%i.halflings-icon.edit 
			Viewing Profile

- if notice
	.row-fluid
		.alert.alert-block.span11
			%p.alert-heading= notice

.row-fluid
	%p
		%b First Name:
		= @user.first_name
	%p
		%b Last Name:
		= @user.last_name
	%p
		%b Mobile Phone:
		= @user.cell_phone
	%p
		%b Last Name:
		= @user.home_phone
	%p
		%b Email:
		= @user.email
	%p
		%b Tshirt Size:
		= @user.tshirt_size
	%p
		%b User availability:
		%ul
			- @user.user_availabilities.each do |user_availability|
				%li
					= user_availability.return_day
					= user_availability.return_time_block
	%p
		%b User Role
		= @user.role

	= link_to 'Edit', edit_user_path(@user)
	\|
	= link_to 'Back', users_path
