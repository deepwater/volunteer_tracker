.row-fluid
  .span12
    %h2
      %i.halflings-icon.edit 
      Charity List

.row-fluid
  .span8
    %table.table.table-bordered.table-striped
      %tr
        %th Name
        %th Alloted Hours
        %th

      - @charities.each do |charity|
        %tr
          %td= charity.name
          %td= charity.alloted_hours
          %td= link_to 'Show', charity