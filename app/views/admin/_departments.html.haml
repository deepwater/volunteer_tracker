.row
  .span6
    %h2 Departments List

  .span3
    %br
    = link_to(new_admin_department_path) do
      %button.btn.btn-primary{:type=>"button", :class => "right-floated-btn"} 
        New Department
%br
.row
  .span9
    %table.table.table-bordered.table-striped
      %tr
        %th Name
        %th Budgeted Hours (Allocated/Budgeted)
        %th 
          Block Scheduling Progress 
          %br
          (Fully Scheduled/Total)
        %th
        %th 

      - @departments.each do |department|
        %tr
          %td= link_to department.name, admin_department_path(department)
          %td
            .progress
              .bar{:class => get_department_usage_class(department.estimated_hours, department.budgeted_hours), :style => "width: #{get_department_usage(department.estimated_hours, department.budgeted_hours)}%;"}
            #{department.estimated_hours} / #{department.budgeted_hours}
          %td
            .progress
              .bar{:class => get_department_usage_class(department.scheduled_department_block_slots, department.total_department_block_slots), :style => "width: #{get_department_usage(department.scheduled_department_block_slots, department.total_department_block_slots)}%;"}
            #{department.scheduled_department_block_slots} / #{department.total_department_block_slots}
          %td= link_to 'Edit', edit_admin_department_path(department)
          %td= link_to('Delete', admin_department_path(department), :method => :delete, data: { confirm: 'Are you sure?' })
