.row
  .span9
    .alert-container
    - flash.each do |type, message|
      %div{:class => flash_class(type) }
        %button{ :class => 'close', :data_dismiss => 'alert' }
          x
        = message
.row
  .span3
    %h2 Users List

  .span3.offset3
    %br
    = link_to(new_admin_user_path) do
      %button.btn.btn-primary{:type=>"button", :class =>"right-floated-btn"} 
        New User


.row
  %br
  .span9
    %table.table.table-bordered.table-striped#users_list_table
      %thead
        %tr
          %th Full Name
          %th Email
          %th T Shirt Size
          %th Role
          %th Charity
          %th
          %th
      %tbody
        - @users.each do |user|
          %tr
            %td= link_to user.full_name, admin_user_path(user)
            %td= user.email
            %td= user.tshirt_size
            %td= user.role
            %td= user.charities.any? ? user.charities.first.name : "Not assigned"
            %td= link_to 'Edit', edit_admin_user_path(user)
            %td= link_to 'Delete', admin_user_path(user), :method => :delete, confirm: "Are you sure you want to delete this user?"