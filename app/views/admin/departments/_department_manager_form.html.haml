= form_for(@department_manager, :url => admin_department_managers_path(), :html => {:class => 'form-horizontal'}) do |f|
  - if @department_manager.errors.any?
    #error_explanation
      %h2= "#{pluralize(@department_manager.errors.count, "error")} prohibited this department manager from being saved:"
      %ul
        - @department_manager.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    = f.hidden_field :department_id, :value => @department.id
    .control-group
      = f.label(:user_id, :class => 'control-label')
      .controls
        = f.collection_select(:user_id, User.all, :id, :full_name)
    .form-actions
      = f.submit(:class => 'btn btn-primary', :value => "Save Changes")