.row
  .span6
    %h2 Departments List

  .span3
    %br
    = link_to(new_admin_department_path) do
      %button.btn.btn-primary{:type=>"button", :class => "right-floated-btn"} 
        New Department
%br
.row
  .span9
    %table.table.table-bordered.table-striped
      %tr
        %th Name
        %th Budgeted Hours
        %th Department Manager
        %th
        %th

      - @departments.each do |department|
        %tr
          %td= link_to department.name, admin_department_path(department)
          %td= department.budgeted_hours
          - if department.department_managers.empty?
            %td
              = link_to(edit_admin_department_path(department)) do
                %button.btn.btn-small.btn-success{:type=>"button"} 
                  Assign Manager
          - else
            %td
              - deparment.department_managers.each do |department_manager|
                = link_to"#{department_manager.user.full_name}",  admin_user_path(department_manager.user)
                 
          %td= link_to 'Edit', edit_admin_department_path(department)
          %td= link_to('Delete', admin_department_path(department), :method => :delete, data: { confirm: 'Are you sure?' })
