.row
  .span5
    %h2 Events List

  .span4.offset3
    %br
    = link_to(new_admin_event_path) do
      %button.btn.btn-primary{:type=>"button", :class=>"right-floated-btn"} 
        New Event

.row
  .span12
    %br
    %table.table.table-bordered.table-striped
      %tr
        %th Name
        %th
        %th

      - @events.each do |event|
        %tr
          %td= link_to event.name, admin_event_path(event)
          %td= link_to 'Edit', edit_admin_event_path(event)
          %td= link_to('Delete', admin_event_path(event), :method=> :delete, data: { confirm: 'Are you sure?' })