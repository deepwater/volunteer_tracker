= simple_form_for([:admin, @event], html: {class: 'form-horizontal'}) do |f|
  = f.input :name
  = f.input :assigned_to, collection: User.all.map { |r| [r.full_name, r.id] }
  = f.input :route_type, collection: [1, 2, 3], include_blank: false
  = f.input :address_line_1
  = f.input :address_line_2
  = f.input :city
  = f.input :state
  = f.input :zip
  = f.input :other, as: :text
  .control-group
    = f.label "Range"
    .controls.input-daterange
      %input.input-small{name: "start", type: "text"}/
      %span.add-on to
      %input.input-small{name: "end", type: "text"}/
  .form-actions
    = f.button :submit


