.row-fluid
  .box.span9
    .box-header
      %h2
        %i.halflings-icon.edit
        Edit User
    .box-content
      = form_for(@user, :url => admin_user_path(), :html => {:class => 'form-horizontal'}) do |f|
        %fieldset
          .control-group
            = f.label(:first_name, :class => 'control-label')
            .controls
              = f.text_field(:first_name, :class => 'input-xlarge focused')
          .control-group
            = f.label(:last_name, :class => 'control-label')
            .controls
              = f.text_field(:last_name, :class => 'input-xlarge focused')
          .control-group
            = f.label(:cell_phone, :class => 'control-label')
            .controls
              = f.text_field(:cell_phone, :class => 'input-xlarge focused')
          .control-group
            = f.label(:home_phone, :class => 'control-label')
            .controls
              = f.text_field(:home_phone, :class => 'input-xlarge focused')
          .control-group
            = f.label(:email, :class => 'control-label')
            .controls
              = f.email_field(:email, :class => 'input-xlarge focused')
          .control-group
            = f.label(:tshirt_size, :class => 'control-label')
            .controls
              = f.select(:tshirt_size, options_for_select(User::TSHIRT_SIZES, @user.tshirt_size))
          .control-group
            = f.label(:role, :class => 'control-label')
            .controls
              = f.select(:role, options_for_select(User::ROLES, @user.role))
          .form-actions
            = f.submit(:class => 'btn btn-primary', :value => "Save Changes")
