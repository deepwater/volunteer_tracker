= simple_form_for([:admin, @user], html: { class: 'form-horizontal' }) do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :username
  = f.input :cell_phone
  = f.input :home_phone
  = f.input :email
  = f.input :adult
  = f.input :password
  = f.input :password_confirmation
  = f.input :tshirt_size, collection: User::TSHIRT_SIZES, include_blank: false
  = f.hidden_field :organisation_id, value: Organisation.first.try(:id)
  = f.input :role, collection: Role::ROLES
  .form-actions
    = f.button :submit