= simple_form_for([:admin, @user], html: { class: 'form-horizontal' }) do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :cell_phone
  = f.input :home_phone
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.input :tshirt_size, collection: User::TSHIRT_SIZES
  = f.input :role, collection: User::ROLES
  .form-actions
    = f.button :submit