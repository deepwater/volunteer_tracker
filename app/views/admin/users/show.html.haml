.row-fluid
	.span12
		%h2
			%i.halflings-icon.edit 
			="#{@user.first_name} #{@user.last_name} "
		%h4
			= "#{@user.charities.first.name}"
		%br

- if notice
	.row-fluid
		.alert.alert-block.span11
			%p.alert-heading= notice

.row-fluid
	%p
		%b First Name:
		= @user.first_name
	%p
		%b Last Name:
		= @user.last_name
	%p
		%b Email:
		= @user.email
	%p
		%b Tshirt Size:
		= @user.tshirt_size
	%p
		%b User Role
		= @user.role

	= link_to 'Edit', edit_admin_user_path(@user)
	\|
	= link_to 'Back', admin_users_path
