.row
	.span9
		%h2
			= @organisation.name

- if notice
	.row
		.span9
			.alert.alert-block
				%p#notice= notice


= link_to 'Edit', edit_admin_organisation_path(@organisation)
\|
= link_to 'Delete', admin_organisation_path(@organisation), method: :delete, data: { confirm: 'Are you sure?' }
\|
= link_to 'Back', admin_organisations_path
