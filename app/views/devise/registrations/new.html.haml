.row
  .span12
    %noscript
      .alert.alert-block.span11
        %h4.alert-heading Warning!
        %p
          You need to have
          %a{:href => "http://en.wikipedia.org/wiki/JavaScript", :target => "_blank"} JavaScript
          enabled to use this site.
  / start: Content
.row
  .span5
    = image_tag("ggf_logo.png")
  .span6.offset1
    %br

    %h2
      = succeed "Create" do
        %span.break
      your profile
    
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal registration'}) do |f|
      = devise_error_messages!
      %fieldset
        .control-group
          = f.label(:first_name, :class => 'control-label')
          .controls
            = f.text_field(:first_name, :class => 'input-xlarge focused')
        .control-group
          = f.label(:last_name, :class => 'control-label')
          .controls
            = f.text_field(:last_name, :class => 'input-xlarge focused')
        .control-group
          = f.label(:cell_phone, :class => 'control-label')
          .controls
            = f.text_field(:cell_phone, :class => 'input-xlarge focused')
        .control-group
          = f.label(:home_phone, :class => 'control-label')
          .controls
            = f.text_field(:home_phone, :class => 'input-xlarge focused')
        .control-group
          = f.label(:email, :class => 'control-label')
          .controls
            = f.email_field(:email, :class => 'input-xlarge focused')
        .control-group
          = f.label(:password, :class => 'control-label')
          .controls
            = f.password_field(:password, :class => 'input-xlarge focused')
        .control-group
          = f.label(:password_confirmation, :class => 'control-label')
          .controls
            = f.password_field(:password_confirmation, :class => 'input-xlarge focused')
        .control-group
          = f.label(:tshirt_size, :class => 'control-label')
          .controls
            = f.select(:tshirt_size, options_for_select(User::TSHIRT_SIZES))
        .control-group
          = label_tag 'I certify that I am 18 years of age or older', nil, class: 'control-label'
          .controls
            = check_box_tag 'age_check'
            %br
            %hr
            =link_to "If you are under 18, or if you're registering for more than one person, click here for more information.", "http://gilroygarlicfestival.com/help/helpDocMultiAcct.html"
        .form-actions
          = f.submit(:class => 'btn btn-primary', :value => "Save Changes")
          %br
          = render "links"

    