.container-fluid
  .row-fluid
    %noscript
      .alert.alert-block.span11
        %h4.alert-heading Warning!
        %p
          You need to have
          %a{:href => "http://en.wikipedia.org/wiki/JavaScript", :target => "_blank"} JavaScript
          enabled to use this site.
    / start: Content
    #content.span11
      .row-fluid.sortable
        .box.span12
          .box-header{"data-original-title" => ""}
            %h2
              %i.halflings-icon.edit
              = succeed "Create" do
                %span.break
              your profile
          .box-content
            = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
              = devise_error_messages!
              %fieldset
                .control-group
                  = f.label(:first_name, :class => 'control-label')
                  .controls
                    = f.text_field(:first_name, :class => 'input-xlarge focused')
                .control-group
                  = f.label(:last_name, :class => 'control-label')
                  .controls
                    = f.text_field(:last_name, :class => 'input-xlarge focused')
                .control-group
                  = f.label(:cell_phone, :class => 'control-label')
                  .controls
                    = f.text_field(:cell_phone, :class => 'input-xlarge focused')
                .control-group
                  = f.label(:home_phone, :class => 'control-label')
                  .controls
                    = f.text_field(:home_phone, :class => 'input-xlarge focused')
                .control-group
                  = f.label(:email, :class => 'control-label')
                  .controls
                    = f.email_field(:email, :class => 'input-xlarge focused')
                .control-group
                  = f.label(:password, :class => 'control-label')
                  .controls
                    = f.password_field(:password, :class => 'input-xlarge focused')
                .control-group
                  = f.label(:password_confirmation, :class => 'control-label')
                  .controls
                    = f.password_field(:password_confirmation, :class => 'input-xlarge focused')
                .control-group
                  = f.label(:tshirt_size, :class => 'control-label')
                  .controls
                    = f.select(:tshirt_size, options_for_select(User::TSHIRT_SIZES))
                .form-actions
                  = f.submit(:class => 'btn btn-primary', :value => "Save Changes")
= render "links"